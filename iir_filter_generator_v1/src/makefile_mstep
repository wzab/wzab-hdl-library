VHDLS = \
  fixed_prec.vhd \
  iir_fphdl_pkg.vhd \
  filtdef.vhd \
  iir_fphdl_mstep.vhd \
  iir_tb_mstep.vhd \
  
ENTITY=iir_tb_mstep

#STD=standard
STD=synopsys
all: ${ENTITY}.ghw
  
reader:   ${ENTITY} ${ENTITY}.ghw
	gtkwave ${ENTITY}.ghw {ENTITY}.sav
${ENTITY}: ${VHDLS}
	ghdl -a --std=08  --ieee=${STD} ${VHDLS} 
	ghdl -e --std=08  -fexplicit --ieee=${STD} ${ENTITY}
${ENTITY}.ghw: ${ENTITY}
	./${ENTITY} --wave=${ENTITY}.ghw --stop-time=10000ns
#	./${ENTITY} --trace-processes --trace-signals --checks --wave=${ENTITY}.ghw --stop-time=10000ns
clean:
	rm *.o *.vcd *.ghw  ${ENTITY}
	
